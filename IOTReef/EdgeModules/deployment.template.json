{
  "$schema-template": "1.0.1",
  "modulesContent": {
    "$edgeAgent": {
      "properties.desired": {
        "schemaVersion": "1.0",
        "runtime": {
          "type": "docker",
          "settings": {
            "minDockerVersion": "v1.25",
            "loggingOptions": "",
            "registryCredentials": {
              "iotreefimg": {
                "username": "$CONTAINER_REGISTRY_USERNAME_iotreefimg",
                "password": "$CONTAINER_REGISTRY_PASSWORD_iotreefimg",
                "address": "iotreefimg.azurecr.io"
              }
            }
          }
        },
        "systemModules": {
          "edgeAgent": {
            "type": "docker",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-agent:1.0",
              "createOptions": {}
            }
          },
          "edgeHub": {
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-hub:1.0",
              "createOptions": {
                "HostConfig": {
                  "PortBindings": {
                    "5671/tcp": [
                      {
                        "HostPort": "5671"
                      }
                    ],
                    "8883/tcp": [
                      {
                        "HostPort": "8883"
                      }
                    ],
                    "443/tcp": [
                      {
                        "HostPort": "443"
                      }
                    ]
                  }
                }
              }
            }
          }
        },
        "modules": {
          "ProcessTelemetry": {
            "version": "1.0.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULEDIR<../ProcessTelemetry>}",
              "createOptions": {}
            }
          },
          "DoserTelemetry": {
            "version": "1.0.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULEDIR<../DoserTelemetry>}",
              "createOptions": {}
            }
          }
        }
      }
    },
    "$edgeHub": {
      "properties.desired": {
        "schemaVersion": "1.0",
        "routes": {
          "ToProcess": "FROM /messages/* WHERE NOT IS_DEFINED($connectionModuleId) INTO BrokeredEndPoint(\"modules/ProcessTelemetry/inputs/input1\")",
          "ProcessTelemetryToIoTHub": "FROM /messages/modules/ProcessTelemetry/outputs/doser INTO BrokeredEndPoint(\"/modules/DoserTelemetry/inputs/input1\")",
          "DoserTelemetryToIoTHub": "FROM /messages/modules/DoserTelemetry/outputs/* INTO $upstream"
        },
        "storeAndForwardConfiguration": {
          "timeToLiveSecs": 7200
        }
      }
    }
  }
}